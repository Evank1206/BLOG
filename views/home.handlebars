        <h1 class="mx-auto" id="home">HOME PAGE</h1>
      </div>

{{!-- articles starts here --}}

    {{#each (articles)}}
          <div class="row">
            <div class="col-sm-8 mt-4">
              <div class="card mb-4" style="height: 30rem;">
                <div class="card-body">
            
            <img class="card-img" style="height: 27.5rem;" src="http://localhost:7000/uploads/{{this.image_url}}" alt="Card image">
                
                </div>
              </div>
            </div>

            <div class="col-sm-4 mt-4">
              <div class="card" style="height: 30rem;">
                <div class="card-body">
                   <a href="http://localhost:7000/article?id={{this.id}}"><h3>{{this.headline}}</h3></a>
                   <hr>
                    <h5>{{this.body}}</h5>
                 
                </div>
              </div>
            </div>
          </div>

          {{/each}}
  {{!-- main container ends here --}}  
 </div>

