<body class = "container" id="body">
    <form method="POST" action="/register">
        <div class="container border border-info text-center form-group" style="width: 30rem; height:35rem;" id="mainContainer">
            <h2 class="mt-4">Register</h2>
            <hr>
            <h5>User Name:</h5>
            <input class="form-control col-md-auto" name="username" type="text" placeholder="User Name" id="userName" style="width:27rem;">
            <h5>E_mail:</h5>
            <input class="form-control col-md-auto" name="email" type="email" placeholder="e_mail" id="email" style="width:27rem;">
            <h5>Password:</h5>
            <input class="form-control col-md-auto" name="password" type="password" placeholder="password" id="password" style="width:27rem;">
            <h5>Confirm Password:</h5>
            <input class="form-control col-md-auto" name="passwordMatch" type="password" placeholder="re-enter password" id="ConfirmPassword" style="width:27rem;">
            <br>
            <button class="mt-4" id="submitBtn" style="width:10rem;">Submit</button>

            <div class=" mt-4">
                <h6>If you have account</h6>
                <p>
                    {{!-- Sign In here --}}
                    <i class="fa fa-long-arrow-right"></i>
                    <a href="/login" class=" text-success toggle-form" data-state="sign-up">Sign In</a>
                    <i class="fa fa-long-arrow-left"></i>
                </p>
            </div>
        </div>

</body>
